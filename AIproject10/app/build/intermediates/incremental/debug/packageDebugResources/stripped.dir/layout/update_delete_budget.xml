<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_design2"
    android:orientation="vertical"
    android:id="@+id/UpdateDeleteBudget"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Budget Category:"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/BudgetCategory"
            android:spinnerMode="dropdown"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Budget Limit:"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/BudgetLimit"
            android:inputType="numberDecimal"
            android:hint="Enter Budget Limit"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Update"
            android:id="@+id/UpdateBudget"
            android:background="@drawable/rounded_corners2"
            android:textColor="@color/white"
            android:textSize="20sp"
            />


    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>